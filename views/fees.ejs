<%- include("./partials/top.ejs") %>

    <section class="container mt-5">
        <%- include("./partials/navigation.ejs") %>

            <article class="row mt-2 fees">
                <div class="col">
                    <h4 class="text-center text-primary bg-primary bg-opacity-25 p-2">Add Student
                    </h4>


                    <form method="post" action="/fees">
                        <div class="mb-3">
                            <label for="fname" class="form-label">Student Name</label>
                            <input type="text" class="form-control" id="fname" name="fname">
                        </div>
                        <div class="mb-3">
                            <label for="standard" class="form-label">Student Course Name</label>
                            <input type="text" class="form-control" id="standard" name="standard">
                        </div>
                        <div class="mb-3">
                            <label for="fees" class="form-label">Fees Amount</label>
                            <input type="number" class="form-control" id="fees" name="fees">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary mybtn">Submit</button>
                    </form>

                </div>
                <div class="col">
                    <h4 class=" text-center text-danger bg-danger bg-opacity-25 p-2">Show Details</h4>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Sr.no</th>
                                <th scope="col">Name</th>
                                <th scope="col">Course</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% let no=1 %>
                                <%students.forEach((student)=> { %>
                                    <%if(student.fname!='handler'){ %>
                                        <tr>
                                            <th scope="row">
                                                <%= no%>
                                            </th>
                                            <td>
                                                <%= student.fname %>
                                            </td>
                                            <td>
                                                <%= student.standard %>
                                            </td>

                                            <td>
                                                <%= student.fees %>
                                            </td>
                                            <td>
                                                <form method="post" action="/edit/<%= student._id %>" class="d-inline">
                                                    <button type="submit" class="btn"><i
                                                            class="fa-solid fa-pen text-primary"></i></button>
                                                </form>


                                                <form method="post" action="/fees/<%= student._id %>" class="d-inline">
                                                    <button type="submit" class="btn">
                                                        <i class="fa-solid fa-user-xmark text-danger"></i>
                                                    </button>

                                                </form>
                                            </td>
                                        </tr>
                                        <% no++ %>
                                            <% } %>
                                                <% }) %>
                        </tbody>
                    </table>

                </div>
            </article>

    </section>

    <%- include("./partials/bottom.ejs") %>